{
    "manifest_version": 3,
    "name": "click",
    "description": "Click on frequently used hard-to-reach DOM elements fast without a single mouse click",
    "version": "0.3.0",
    "permissions": [
        "tabs",
        "scripting",
        "storage",
        "contextMenus"
    ],
    "host_permissions": [
        "*://*/",
        "file:///*/"
    ],
    "background": {
        "service_worker": "background/index.js",
        "type": "module"
    },
    "action": {
        "default_icon": "icons/icon_32.png",
        "default_popup": "popup/popup.html"
    },
    "options_page": "options.html",
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "windows": "Alt+C",
                "mac": "Command+C",
                "chromeos": "Alt+C",
                "linux": "Alt+C"
            }
        }
    },
    "icons": {
        "16": "icons/icon_16.png",
        "32": "icons/icon_32.png",
        "128": "icons/icon_128.png"
    },
    "homepage_url": "https://github.com/vikian050194/click"
}